<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="k.com.alvin.footballmatchschedule">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_football_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_football_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailMatchActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".TeamDetailActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".PlayerDetailActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".MatchSearchActivity" />
        <activity android:name=".TeamSearchActivity"></activity>
    </application>

</manifest>